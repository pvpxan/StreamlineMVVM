<Window x:Class="StreamlineMVVM.DialogBaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreamlineMVVM"
        mc:Ignorable="d"
        Height="140" Width="400"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        BorderThickness="1" BorderBrush="#FF007ACC" Background="#FF1E1E1E"
        TabIndex="0"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Topmost="True"
        Title="">

    <Window.Resources>
        <DataTemplate DataType="{x:Type local:WindowsMessageViewModel}">
            <local:WindowsMessage/>
        </DataTemplate>
    </Window.Resources>
    
<!--
When adding a custom dialog control that uses this window, add below to a merged dictionary in App.xaml
    
    <ResourceDictionary>
        <DataTemplate DataType="{x:Type local:MiscControlViewModel}">
            <local:MiscControl/>
        </DataTemplate>
    </ResourceDictionary>
-->

    <ContentPresenter x:Name="ContentPresenter" Content="{Binding}"></ContentPresenter>
</Window>
