<Window x:Class="MVVM.DialogBaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="140" Width="400"
        ResizeMode="NoResize" TabIndex="50"
        Icon="{Binding WindowIcon}"
        BorderThickness="1" BorderBrush="#FF007ACC" Background="Black"
        WindowStyle="{Binding DialogWindowStyle}" Topmost="{Binding Topmost}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

    <ContentPresenter x:Name="ContentPresenter" Content="{Binding}"></ContentPresenter>
</Window>
